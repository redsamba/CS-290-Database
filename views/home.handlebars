<h1>Workout Tracker</h1>
<h3>By: Tim Williams</h3>
<br>
<form action="/insert" method="get">
 <fieldset>
  <label>Name:
   <input type= "text" name="name">

  <label>Reps:
   <input type= "number" name="reps">

  <label>Weight:
   <input type= "number" name="weight">

  <label>Date:
   <input type= "date" name="date">
   <br>
  <label>Lbs: 1 / Kg: 0
  <br>
   <input type= "radio" name="lbs" value ="1">Lbs</input>
   <br>
   <input type= "radio" name="lbs" value ="0">Kg</input>
 <input type="submit" value="Submit">
 </fieldset>
</form>
<br>
<table>
 <caption>Exercise Chart</caption>
 <thead>
  <tr>
   <th> Name
   <th> Reps
   <th> Weight
   <th> Date
   <th> Lbs
 <tbody>
  {{#each dataRows}}
   <tr>
     <td> {{this.name}}
     <td> {{this.reps}}
     <td> {{this.weight}}
     <td> {{this.date}}
     <td> {{this.lbs}}
     <td> <form action="/edit" method="get">
             <input type="hidden" name="id" value="{{this.id}}"></input>
             <input type="submit" value="Edit"></input>
          </form>
     <td> <form action="/delete" method="get">
             <input type="hidden" name="id" value="{{this.id}}"></input>
             <input type="submit" value="Delete"></input>
          </form>
  {{/each}}
</table>
