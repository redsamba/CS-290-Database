<form action="/insert" method="get">
 <fieldset>
  <label>Name:
   <input type= "text" name="text_input" size= "30"maxlength= "50">
 </fieldset>
 <fieldset>
  <label>Reps:
   <input type= "number" name="numerical_input" size= "30"maxlength= "50">
 </fieldset>
  <fieldset>
  <label>Weight:
   <input type= "number" name="numerical_input" size= "30"maxlength= "50">
 </fieldset>
  <fieldset>
  <label>Date:
   <input type= "date" name="date_input" size= "30"maxlength= "50">
 </fieldset>
  <fieldset>
  <label>Lbs:
   <input type= "number" name="numerical_input" size= "30"maxlength= "50">
 </fieldset>
 <input type="submit" name="insert" value="Submit">
</form>
<br>
<table>
 <caption>Exercise Chart</caption>
 <thead>
  <tr>
   <th> Name
   <th> # of Reps
   <th> Weight
   <th> Date
   <th> Lbs
 <tbody>
  {{#each dataRow}}
  <tr>
   <td> {{this.name}}
   <td> {{this.reps}}
   <td> {{this.weight}}
   <td> {{this.date}}
   <td> {{this.pounds}}
   <td> <form action="/edit" method="get"><input type="button" name="edit" value="update">Edit</input></form>
   <td> <form action="/" method="get"><input type="button" name="delete" value="remove">Delete</input></form>
  <tr>
  {{/each}}
</table>
