<h1>Update Info</h1>
<br>
{{dataRows}}
<form action="/safe-update" method="get">
 <fieldset>
  <input type="hidden" name="id" value="{{this.id}}"> 
  <label>Name:
   <input type= "text" name="name" value="{{this.name}}">

  <label>Reps:
   <input type= "number" name="reps" value="{{this.reps}}">

  <label>Weight:
   <input type= "number" name="weight" value="{{this.weight}}">

  <label>Date:
   <input type= "date" name="date" value="{{this.date}}">
   <br>
  <label>Lbs: 1 / Kg: 0
  <br>
   <input type= "radio" name="lbs" value ="1">Lbs</input>
   <br>
   <input type= "radio" name="lbs" value ="0">Kg</input>
 <input type="submit" value="Submit">
 </fieldset>
</form>
